#!/bin/sh

# Remove polybar-reload-log if strings > 60:
$PBRLOG="/home/$USER/.config/i3/polybar-reload.log"
$PBRLOGLEN=$(cat $PBRLOG | wc -l)
if [ $PBRLOGLEN > 60];then rm -rf $PBRLOG;fi

# Launch some things on startx:
autorandr 2mon
xset r rate 500 33 &
light-locker &
setxkbmap us,ru -option grp:shifts_toggle,lv3:ralt_switch,misc:typo
