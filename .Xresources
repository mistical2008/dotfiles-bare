!#if __has_include(".extend.Xresources")
!#include ".extend.Xresources"
!#include ".cache/wal/colors.Xresources"
!#endif

! ^ The above lines are no comments!
! Leave them as they are if a file ~/.extend.Xresources is being used on your system.
! config can be added there or also here below.
! For comments use "!"

Xft.dpi: 96
Xft.antialias: true
Xft.hinting: true
Xft.rgba: rgb
Xft.autohint: false
Xft.hintstyle: hintslight
Xft.lcdfilter: lcddefault

XTerm*background: #2b2b2b
XTerm*foreground: #e7e7e7
XTerm*pointerColor: #16A085
XTerm*faceName: Fixed
XTerm*faceSize: 11
XTerm*reverseVideo:      on
XTerm*selectToClipboard: true

!##### THIS FILE IS BEING CURRENTLY MANAGED BY URXVTCONFIG #####
!##### CHANGES DONE TO THIS FILE MANUALLY MAY AFFECT THE FUNCTIONALITY ######
!##### PROCEED WITH CAUTION! #####

URxvt*scrollBar:         false
URxvt*scrollBar_right:   true

! прокручивать по отношению к буферу (прокрутка мышью или Shift+Page Up)
URxvt*scrollWithBuffer:     true
URxvt.secondaryWheel:       1
URxvt*transparent:          false
URxvt.urgentOnBell:         false

URxvt*depth:                32
!URxvt.background: [10]Background

#define font1         Source Code Pro
#define font2         RobotoMono Nerd Font Mono
#define font3         Droid Sans Mono
#define font4         NotoSansMono Nerd Font

URxvt.letterSpace: 0
URxvt.lineSpace: 0
URxvt.font:           xft:font1:pixelsize=17, xft:font2:pixelsize=15:minspace=false, xft:font3:pixelsize=15,xft:font4:pixelsize=15
URxvt.boldFont:       xft:font1:bold:pixelsize=17, xft:font2:pixelsize=15:minspace=False,xft:font3:pixelsize=15,xft:font4:pixelsize=15
URxvt.italicFont:     xft:font1:italic:pixelsize=17, xft:font2:pixelsize=15:minspace=False,xft:font3:pixelsize=15,xft:font4:pixelsize=15
URxvt.boldItalicFont: xft:font1:bold:italic:pixelsize=17, xft:font2:pixelsize=15:minspace=False, xft:font3:pixelsize=15, xft:font4:pixelsize=15

*antialias:                 true
*autohint:                  true

URxvt.perl-ext-common:           default,fullscreen,matcher,resize-font
!URxvt.keysym.M-Escape:           perl:keyboard-select:activate
!URxvt.keysym.M-s:                perl:keyboard-select:search
!URxvt.keyboard-select.clipboard: true

URxvt.keysym.F11: perl:fullscreen:switch
! Normal copy-paste keybindings without perls
URxvt.iso14755:                   false
URxvt.keysym.Shift-Control-V:     eval:paste_clipboard
URxvt.keysym.Shift-Control-C:     eval:selection_to_clipboard
!Xterm escape codes, word by word movement
URxvt.keysym.Control-Left:        \033[1;5D
URxvt.keysym.Shift-Control-Left:  \033[1;6D
URxvt.keysym.Control-Right:       \033[1;5C
URxvt.keysym.Shift-Control-Right: \033[1;6C
URxvt.keysym.Control-Up:          \033[1;5A
URxvt.keysym.Shift-Control-Up:    \033[1;6A
URxvt.keysym.Control-Down:        \033[1;5B
URxvt.keysym.Shift-Control-Down:  \033[1;6B

URxvt.url-launcher:         xdg-open
URxvt*underlineURLs:        true
URxvt.matcher.button:       1
!URxvt.tabbed.tabbar-fg:     2
!URxvt.tabbed.tabbar-bg:     0
!URxvt.tabbed.tab-fg:        3
!URxvt.tabbed.tab-bg:        0
URxvt.bell-command:         mpv /usr/share/sounds/elementary/stereo/bell.wav

!####################################################################
!##### DUNST COLORS #################################################
!####################################################################
Dunst.background: background
Dunst.foreground: foreground
