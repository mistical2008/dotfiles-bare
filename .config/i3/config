# Lock screen
bindsym $mod+shift+x exec betterlockscreen -l dimblur

# Lock on suspend:
exec --no-startup-id "xss-lock -- betterlockscreen -l dimblur"


# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5% && mpv /usr/share/sounds/sonar/stereo/audio-volume-change.* --audio-device=pulse/alsa_output.pci-0000_00_03.0.hdmi-stereo #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5% && mpv mpv /usr/share/sounds/sonar/stereo/audio-volume-change.* --audio-device=pulse/alsa_output.pci-0000_00_03.0.hdmi-stereo #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle # mute sound

# Sreen brightness controls
bindsym XF86MonBrightnessUp exec xbacklight -inc 20 # increase screen brightness
bindsym XF86MonBrightnessDown exec xbacklight -dec 20 # decrease screen brightness

# Touchpad controls
bindsym XF86TouchpadToggle exec /some/path/toggletouchpad.sh # toggle touchpad

# Media player controls
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

