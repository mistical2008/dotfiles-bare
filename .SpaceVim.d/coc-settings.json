{
  "suggest.enablePreview": true,
  "prettier.eslintIntegration": true,
  "prettier.tslintIntegration": true,
  "prettier.stylelintIntegration": true,
  "html.enable": true,
  "html.validate.html": true,
  "html.validate.scripts": true,
  "html.validate.styles": true,
  "explorer.icon.enableNerdfont": true,
  "html.filetypes": [
    "html",
    "handlebars",
    "htmldjango",
    "ejs"
  ],
  "css.validate": false,
  "scss.validate": false,
  "snippets.extends": {
    "javascriptreact": [
      "javascript"
    ],
    "typescript": [
      "javascript"
    ],
    "typescriptreact": [
      "javascript"
    ]
  },
  "git.enableGutters": true,
  "coc.preferences.previewAutoClose": true,
  "stylelintplus.autoFixOnSave": true,
  "stylelintplus.autoFixOnFormat": true,
  "coc.preferences.formatOnSaveFiletypes": [
    "scss",
    "css",
    "javascript",
    "javascriptreact",
    "typescriptreact",
    "typescript",
    "typescript.tsx",
    "json",
    "vim",
    "tex",
    "html",
    "Markdown",
    "python"
  ],
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "emmet.includeLanguages": {
    "vue-html": "html",
    "javascript": [
      "javascriptreact",
      "typescriptreact"
    ],
    "ejs": "html",
    "pug": "jade"
  },
  "diagnostic.enable": true,
  "diagnostic.displayByAle": false,
  "cssmodules.camelCase": true,
  "browser.priority": 10
}
